{
    "compilerOptions": {
        "module": "system",
        "target": "es5",
        "rootDir": "src",
        "outFile": "build/ld39.js",

        "noEmitOnError": true,
		"strict": true,
		"noImplicitReturns": true,
		"forceConsistentCasingInFileNames": true,
		"noFallthroughCasesInSwitch": false,
        "noUnusedLocals": false,
        "noUnusedParameters": false,
 
        "removeComments": true,
        "sourceMap": false,

        "lib": ["dom", "es5", "es2015", "es2016", "es2017"]
     },
    "exclude": [
        "build",
        "data",
        "sources"
    ]
}
